<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" name="MyApp">
    <Appenders>
        <RollingRandomAccessFile name="LogApp" fileName="log/webApp.log" filePattern="log/webApp/webApp-%d{yyyy-MM-dd_HH}_%i.log" immediateFlush="false" append="true" ignoreExceptions="false">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>

            <Policies>
                <TimeBasedTriggeringPolicy interval="6" modulate="true"/>
                <SizeBasedTriggeringPolicy size="4 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="500"/>
        </RollingRandomAccessFile>

        <Async name="ASYNC_LogApp" includeLocation="true">
            <AppenderRef ref="LogApp" />
        </Async>

    </Appenders>

    <Loggers>
        <Logger name="com.jjs.webservice.web.ui" level="info" additivity="false">
            <AppenderRef ref="ASYNC_LogApp"/>
        </Logger>
    </Loggers>
</Configuration>